# VoiceAppoint Backend Environment Variables

# Django Core Settings
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=voiceappoint
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@db:5432/voiceappoint

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Internationalization
LANGUAGE_CODE=es
TIME_ZONE=Europe/Madrid
USE_I18N=True
USE_TZ=True

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=False
CELERY_RESULT_EXPIRES=3600

# Email Configuration (Development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
FROM_EMAIL=noreply@voiceappoint.local

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Vapi Configuration
VAPI_API_KEY=your_vapi_api_key
VAPI_WEBHOOK_SECRET=your_vapi_webhook_secret
VAPI_BASE_URL=https://api.vapi.ai

# Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# Sentry Configuration (Production)
SENTRY_DSN=your_sentry_dsn

# Cloud Storage (Production)
USE_CLOUD_STORAGE=False
CLOUD_STORAGE_ACCESS_KEY=your_cloud_storage_access_key
CLOUD_STORAGE_SECRET_KEY=your_cloud_storage_secret_key
CLOUD_STORAGE_BUCKET_NAME=voiceappoint-media
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_CUSTOM_DOMAIN=

# Logging
DJANGO_LOG_LEVEL=INFO
APPS_LOG_LEVEL=DEBUG
DJANGO_LOG_FILE=/var/log/django/django.log

# Performance Settings
DB_CONN_MAX_AGE=600
REDIS_MAX_CONNECTIONS=50
CACHE_TIMEOUT=3600
CACHE_KEY_PREFIX=voiceappoint

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=False
SECURE_BROWSER_XSS_FILTER=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_AGE=1209600
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# Health Check Settings
HEALTH_CHECK_DISK_USAGE_MAX=90
HEALTH_CHECK_MEMORY_MIN=100

# Application Performance Monitoring (Optional)
APM_SERVICE_NAME=
APM_SECRET_TOKEN=
APM_SERVER_URL=http://localhost:8200
APM_ENVIRONMENT=development
